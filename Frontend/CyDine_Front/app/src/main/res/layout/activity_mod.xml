<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFD700"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Mod Board Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mod Board"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FF3B30"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="20dp" />

    <!-- RecyclerView for Table -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tableRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"/>

    <!-- Message Details Section -->
    <TextView
        android:id="@+id/messageDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Message Details: [Example Message Text]"
        android:background="#FFFFFF"
        android:padding="8dp"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/reportCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number of times reported: 25"
        android:padding="8dp"
        android:textSize="14sp" />

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/approveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Approve" />

        <Button
            android:id="@+id/dismissButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dismiss"
            android:layout_marginStart="16dp" />

        <Button
            android:id="@+id/banUserButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ban User"
            android:layout_marginStart="16dp" />
    </LinearLayout>

    <!-- RecyclerView for Live Message Feed -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Live Message Feed"
        android:background="#000000"
        android:textColor="#FFFFFF"
        android:padding="8dp"
        android:gravity="center"
        android:layout_marginTop="20dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/liveMessageFeedRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"/>
</LinearLayout>
