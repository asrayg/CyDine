<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Input Form -->
    <TextView
        android:id="@+id/sleepPrompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your sleep hours for a day:"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/sleepInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="e.g., 7.5"/>

    <EditText
        android:id="@+id/dayInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Enter the day (1-7)"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_marginTop="8dp"/>

    <!-- Feedback Message -->
    <TextView
        android:id="@+id/feedbackMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="16dp"/>

    <!-- Graph -->
    <com.example.androidexample.SleepGraphView
        android:id="@+id/sleepGraphView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="16dp"
        android:background="#EEEEEE"/>

    <!-- Stats -->
    <TextView
        android:id="@+id/statsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Average Sleep: 0 hours"
        android:textSize="16sp"
        android:layout_marginTop="16dp"/>

    <!-- Delete Button -->
    <Button
        android:id="@+id/deleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Sleep Data for a Day"
        android:layout_marginTop="8dp"/>
</LinearLayout>
