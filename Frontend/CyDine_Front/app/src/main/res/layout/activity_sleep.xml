<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFDE7"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Sleep Graph View -->
        <com.example.androidexample.SleepGraphView
            android:id="@+id/sleepGraphView"
            android:layout_width="match_parent"
            android:layout_height="122dp"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/sleepHoursInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Hours Slept"
                android:inputType="numberDecimal" />

            <Button
                android:id="@+id/addSleepButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Sleep" />
        </LinearLayout>

        <Button
            android:id="@+id/getAssessmentButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get Sleep Assessment" />

        <LinearLayout
            android:id="@+id/sleepHistoryContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</ScrollView>
