<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <!-- Server 1 UI elements -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Server URL (default to):" />

        <EditText
            android:id="@+id/serverEdt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="ws://10.0.2.2:8080/chat/1/"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/unameEdt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="username"
            android:textSize="20sp"
            android:layout_marginTop="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Select your status:" />

        <Spinner
            android:id="@+id/statusSpinner1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/connectBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connect to chat server#1"
            android:layout_marginTop="20dp" />

        <Button
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back to chat server#1" />

        <!-- Server 2 UI elements -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Server2 URL (default to):" />

        <EditText
            android:id="@+id/serverEdt2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="ws://10.0.2.2:8080/chat/2/"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/unameEdt2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="username"
            android:textSize="20sp"
            android:layout_marginTop="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Select your status for Chat 2:" />

        <Spinner
            android:id="@+id/statusSpinner2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/connectBtn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connect to chat server#2"
            android:layout_marginTop="20dp" />

        <Button
            android:id="@+id/backBtn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back to chat server#2" />

    </androidx.appcompat.widget.LinearLayoutCompat>
</ScrollView>
