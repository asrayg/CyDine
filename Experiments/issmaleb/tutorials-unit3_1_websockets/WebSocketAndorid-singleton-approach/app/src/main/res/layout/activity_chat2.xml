<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".ChatActivity2"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <!-- Profile Image and Status at the top -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/profileImage2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@android:drawable/ic_menu_camera"
            android:contentDescription="Profile Image" />

        <TextView
            android:id="@+id/statusIndicator2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Offline"
            android:textColor="@android:color/holo_red_dark"
            android:layout_marginStart="10dp"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <!-- Message Input and Send Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:layout_height="50dp"
            android:layout_width="320dp"
            android:hint="message"
            android:textSize="20dp"
            android:id="@+id/msgEdt2" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send"
            android:id="@+id/sendBtn2" />
    </LinearLayout>

    <!-- Conversation Display Area -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="500dp">

        <TextView
            android:id="@+id/tx2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="The Conversation will appear here:\n"
            android:textSize="20dp" />
    </ScrollView>

    <!-- Read and Delivered Status TextView -->
    <TextView
        android:id="@+id/messageStatus2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delivered"
        android:layout_marginTop="5dp"
        android:textColor="@android:color/darker_gray"
        android:gravity="center" />

</androidx.appcompat.widget.LinearLayoutCompat>
