<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ChatActivity2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="?android:attr/windowBackground">

    <!-- Conversation Display Area -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:background="@drawable/ic_launcher_foreground"
        android:scrollbars="none">

        <TextView
            android:id="@+id/tx2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="The conversation will appear here:"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:padding="8dp" />
    </ScrollView>

    <!-- Message Input and Send Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="8dp"
        android:background="?android:attr/windowBackground">

        <EditText
            android:id="@+id/msgEdt2"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:hint="Type your message..."
            android:textSize="16sp"
            android:padding="10dp"
            android:background="@drawable/edittext_background"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray" />

        <Button
            android:id="@+id/sendBtn2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Send"
            android:layout_marginStart="8dp"
            android:padding="10dp"
            android:textColor="@android:color/black"
            android:backgroundTint="@color/material_dynamic_primary20"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/clearBtn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear Chat" />

</androidx.appcompat.widget.LinearLayoutCompat>
