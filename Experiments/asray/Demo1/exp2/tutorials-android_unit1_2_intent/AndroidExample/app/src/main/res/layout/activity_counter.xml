<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Counter Display -->
    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="36sp"
        android:gravity="center"
        android:layout_gravity="center"
        android:padding="16dp" />

    <!-- Operation Buttons -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <Button
            android:id="@+id/counter_increase_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Increase" />

        <Button
            android:id="@+id/counter_decrease_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Decrease" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <Button
            android:id="@+id/counter_multiply_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Multiply by 2" />

        <Button
            android:id="@+id/counter_divide_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Divide by 2" />
    </LinearLayout>

    <!-- Double and Reset Buttons -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <Button
            android:id="@+id/counter_double_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Double" />

        <Button
            android:id="@+id/counter_reset_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset" />
    </LinearLayout>

    <!-- Custom Operation Section -->
    <EditText
        android:id="@+id/custom_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter custom multiplier" />

    <Button
        android:id="@+id/counter_custom_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apply custom multiplier"
        android:layout_gravity="center" />

    <!-- History Log -->
    <TextView
        android:id="@+id/history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="History:"
        android:padding="16dp"
        android:textSize="16sp" />

    <!-- Back Button -->
    <Button
        android:id="@+id/counter_back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back to Main"
        android:layout_gravity="center" />

</LinearLayout>
